entrada(paella).
entrada(gazpacho).
entrada(consomé).
carne(filete_de_cerdo).
carne(pollo_asado).
pescado(trucha).
pescado(bacalao).
postre(flan).
postre(helado).
postre(pastel).

menu(X,Y,Z):-entrada(X),(carne(Y);pescado(Y)),postre(Z).
menu_consome(consomé,Y,Z):-entrada(consomé),(carne(Y);pescado(Y)),postre(Z).
menu_sin_flan(X,Y,Z):-entrada(X),(carne(Y);pescado(Y)),postre(Z),not(Z = flan).
